#pager ul{
width:100px;
float:left;
}


#pager ul.pages {
display:block;
border:none;
text-transform:uppercase;
font-size:12px;
//margin:10px 0 50px;
padding:0;
font-family:Arial, Helvetica, sans-serif;

}

#pager ul.pages span {
	
list-style:none;
float:left;
text-decoration:none; 
margin:0 20px 0 0;
height:30px;
line-height:30px;
text-align:center;
padding:2px 0px 0px 0px;
color:#0079CA;
cursor:pointer;
}

#pager ul.pages span:hover {
color:#0079CA;
}

#pager ul.pages span.pgEmpty {
color:#909090;

}

#pager ul.pages span.pgCurrent {
border:1px;
color:#000;
font-weight:700;
background:none;
text-decoration:none;
}
#pager ul.pages span.pgNext{

}
