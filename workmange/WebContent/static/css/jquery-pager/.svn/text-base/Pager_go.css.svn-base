.pager ul.pages {

border:none;
text-transform:uppercase;
font-size:12px;
margin:10px 0px 0px 0px;
padding:0;
font-family:Arial, Helvetica, sans-serif;
/*float:left;*/
//width:100%;
}

.pager ul.pages span {
list-style:none;
float:left;
text-decoration:none; 
margin:0 1% 0 0;
height:15px;
cursor:pointer;

color:#0079CA;
text-decoration:underline;
}

.pager ul.pages span:hover {
color:#0079CA;
}

.pager ul.pages span.pgEmpty {
color:#909090;
text-decoration:underline;
cursor: default;
}

.pager ul.pages span.pgCurrent {
border:1px;
color:#000;
font-weight:700;
/*background:#fff;*/
text-decoration:none;
}
